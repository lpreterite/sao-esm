{
  "name": "<%= npm_name %>",
  "version": "0.1.0",
  "description": "<%= description %>",
  "main": "dist/<%= name %>.cjs.js",
  "module": "dist/<%= name %>.esm.js",
  "jsnext:main": "dist/<%= name %>.esm.js",
  "scripts": {<% if(moduleBy === 'vue'){ %>
    "serve": "vue-cli-service serve",<% } %>
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "pretest": "rollup -c -m inline",
    "test": "mocha './tests/unit/*.spec.js'",
    "test:coverage": "nyc mocha './tests/unit/*.spec.js'",
    "prerelease": "npm run build",
    "release": "release-it",
    "nvm": "sh bin/nvm.sh"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "npm": ">=6.0.0",
    "node": ">=8.0.0 <14"
  },
  "repository": {
    "type": "git",
    "url": "<%= homepage %>"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "keywords": <%- keywords.length>0 ? keywords : '[]' %>,
  "author": "<%= username %> <<%= email %>> (<%= website %>)",
  "license": "MIT",
  "bugs": {
    "url": "<%= homepage %>/issues"
  },
  "homepage": "<%= homepage %>#readme",
  "dependencies": {<% if(moduleBy === 'vue'){ %>
    "vue": "^2.6.14"<% } %>
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/register": "^7.13.14",
    "@release-it/conventional-changelog": "^4.2.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",<% if(moduleBy === 'vue'){ %>
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-unit-mocha": "^4.5.13",
    "@vue/cli-service": "^4.5.13",
    "@vue/compiler-sfc": "^3.2.9",
    "@vue/test-utils": "^1.2.2",<% } %>
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "core-js": "^2.6.12",<% if(moduleBy === 'vue'){ %>
    "jsdom": "^17.0.0",
    "jsdom-global": "^3.0.2",<% } %>
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",<% if(moduleBy === 'vue'){ %>
    "postcss": "^8.3.6",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-import": "^14.0.2",
    "postcss-mixins": "^8.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^6.7.0",
    "postcss-scss": "^4.0.0",
    "postcss-url": "^10.1.3",<% } %>
    "release-it": "^14.6.1",
    "rollup": "^2.45.2",<% if(moduleBy === 'vue'){ %>
    "rollup-plugin-css-only": "^3.1.0",<% } %>
    "rollup-plugin-terser": "^7.0.2"<% if(moduleBy === 'vue'){ %>,
    "rollup-plugin-vue": "^5.1.9",
    "vue-template-compiler": "^2.6.14"<% } %>
  }
}
